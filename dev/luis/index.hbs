{{!-- Homepage template --}}
{{!-- This is the first page visitors see. --}}

<main>
    <h1>{{@site.title}}</h1>
    <p>{{@site.description}}</p>

    {{!-- Loop through posts --}}
    {{#foreach posts}}
        <article>
            <h2><a href="{{url}}">{{title}}</a></h2>
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
            {{#if excerpt}}
                <p>{{excerpt}}</p>
            {{/if}}
        </article>
    {{/foreach}}

    {{!-- Pagination (older/newer links) --}}
    {{pagination}}
</main>
