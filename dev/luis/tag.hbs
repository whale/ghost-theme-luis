{{!-- Tag archive template --}}
{{!-- Shows all posts with a specific tag. --}}

<main>
    <header>
        <h1>{{tag.name}}</h1>
        {{#if tag.description}}
            <p>{{tag.description}}</p>
        {{/if}}
    </header>

    {{#foreach posts}}
        <article>
            <h2><a href="{{url}}">{{title}}</a></h2>
            <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
        </article>
    {{/foreach}}

    {{pagination}}
</main>
