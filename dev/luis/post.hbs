{{!-- Single post template --}}
{{!-- Shows when someone clicks into an individual post. --}}

{{#post}}
<article>
    <header>
        <h1>{{title}}</h1>
        <time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM D, YYYY"}}</time>
        {{#if primary_tag}}
            <span>{{primary_tag.name}}</span>
        {{/if}}
    </header>

    <section>
        {{content}}
    </section>
</article>
{{/post}}
